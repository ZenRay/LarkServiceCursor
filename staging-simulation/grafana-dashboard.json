{
  "dashboard": {
    "title": "Lark Service - 综合监控仪表板",
    "tags": ["lark-service", "monitoring"],
    "timezone": "browser",
    "refresh": "10s",
    "schemaVersion": 38,
    "panels": [
      {
        "id": 1,
        "title": "HTTP请求吞吐量",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "rate(lark_service_http_requests_total[5m])",
            "legendFormat": "{{method}} {{endpoint}} - {{status}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "请求/秒"},
          {"format": "short"}
        ]
      },
      {
        "id": 2,
        "title": "HTTP请求延迟 (P50, P95, P99)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(lark_service_http_request_duration_seconds_bucket[5m])) by (le, method, endpoint))",
            "legendFormat": "P50 - {{method}} {{endpoint}}",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(lark_service_http_request_duration_seconds_bucket[5m])) by (le, method, endpoint))",
            "legendFormat": "P95 - {{method}} {{endpoint}}",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(lark_service_http_request_duration_seconds_bucket[5m])) by (le, method, endpoint))",
            "legendFormat": "P99 - {{method}} {{endpoint}}",
            "refId": "C"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "延迟"},
          {"format": "short"}
        ]
      },
      {
        "id": 3,
        "title": "Token刷新次数",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "rate(lark_service_token_refreshes_total[5m])",
            "legendFormat": "{{app_id}} - {{token_type}} - {{status}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "刷新/秒"},
          {"format": "short"}
        ]
      },
      {
        "id": 4,
        "title": "Token缓存命中率",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "sum(rate(lark_service_token_cache_hits_total[5m])) / (sum(rate(lark_service_token_cache_hits_total[5m])) + sum(rate(lark_service_token_cache_misses_total[5m]))) * 100",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "justifyMode": "auto",
          "textMode": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 80, "color": "yellow"},
                {"value": 95, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "活跃Token数量",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 8},
        "targets": [
          {
            "expr": "sum(lark_service_active_tokens)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 50, "color": "yellow"},
                {"value": 100, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 6,
        "title": "API调用吞吐量 (按服务)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "sum(rate(lark_service_api_calls_total[5m])) by (service)",
            "legendFormat": "{{service}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "调用/秒"},
          {"format": "short"}
        ]
      },
      {
        "id": 7,
        "title": "API调用延迟 (P95 按服务)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(lark_service_api_call_duration_seconds_bucket[5m])) by (le, service))",
            "legendFormat": "{{service}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "延迟"},
          {"format": "short"}
        ]
      },
      {
        "id": 8,
        "title": "API错误率",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "sum(rate(lark_service_api_errors_total[5m])) by (service, error_code)",
            "legendFormat": "{{service}} - {{error_code}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "错误/秒"},
          {"format": "short"}
        ],
        "thresholds": [
          {"value": 0, "color": "green"},
          {"value": 0.1, "color": "yellow"},
          {"value": 1, "color": "red"}
        ]
      },
      {
        "id": 9,
        "title": "数据库连接池",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
        "targets": [
          {
            "expr": "lark_service_db_connection_pool_size",
            "legendFormat": "Pool Size",
            "refId": "A"
          },
          {
            "expr": "lark_service_db_connection_pool_available",
            "legendFormat": "Available",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "连接数"},
          {"format": "short"}
        ]
      },
      {
        "id": 10,
        "title": "消息发送统计",
        "type": "stat",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 32},
        "targets": [
          {
            "expr": "sum(increase(lark_service_messages_sent_total[1h]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "displayName": "过去1小时发送消息数"
          }
        }
      },
      {
        "id": 11,
        "title": "文档创建统计",
        "type": "stat",
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 32},
        "targets": [
          {
            "expr": "sum(increase(lark_service_documents_created_total[1h]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "displayName": "过去1小时创建文档数"
          }
        }
      },
      {
        "id": 12,
        "title": "用户查询统计",
        "type": "stat",
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 32},
        "targets": [
          {
            "expr": "sum(increase(lark_service_user_queries_total[1h]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "displayName": "过去1小时用户查询数"
          }
        }
      }
    ]
  }
}
